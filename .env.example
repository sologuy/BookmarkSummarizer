# BookmarkSummarizer 环境变量配置示例
# 将此文件复制为 .env 并根据需要修改

# 模型类型设置
MODEL_TYPE=ollama  # 可选: openai, deepseek, qwen, ollama
API_KEY=your_api_key_here  # OpenAI/Deepseek/Qwen等API密钥
API_BASE=http://localhost:11434  # 模型API地址，Ollama本地地址或其他API地址
MODEL_NAME=llama2  # 或其他支持的模型名称

# 内容处理设置
MAX_TOKENS=1000  # 摘要生成的最大令牌数
MAX_INPUT_CONTENT_LENGTH=6000  # 输入内容的最大长度
TEMPERATURE=0.3  # 摘要生成的随机性

# 爬虫设置
BOOKMARK_LIMIT=0  # 处理的书签数量限制，0表示无限制
MAX_WORKERS=20  # 并行线程数
GENERATE_SUMMARY=true  # 是否生成摘要 